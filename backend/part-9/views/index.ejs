<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Account</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">

    <div class="w-full h-screen flex items-center justify-center">

        <form 
            action="/create" 
            method="post"
            class="w-full max-w-md bg-zinc-800 p-8 rounded-2xl shadow-xl space-y-5"
        >

            <h2 class="text-2xl font-bold text-center">
                Create Account
            </h2>

            <!-- Username -->
            <input 
                type="text" 
                name="username"
                placeholder="Username"
                required
                class="w-full px-4 py-3 rounded-lg bg-zinc-900 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500 transition"
            />

            <!-- Email -->
            <input 
                type="email" 
                name="email"
                placeholder="Email"
                required
                class="w-full px-4 py-3 rounded-lg bg-zinc-900 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500 transition"
            />

            <!-- Password -->
            <input 
                type="password" 
                name="password"
                placeholder="Password"
                required
                class="w-full px-4 py-3 rounded-lg bg-zinc-900 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500 transition"
            />

            <!-- Age -->
            <input 
                type="number" 
                name="age"
                placeholder="Age"
                required
                class="w-full px-4 py-3 rounded-lg bg-zinc-900 border border-zinc-700 outline-none focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500 transition"
            />

            <!-- Submit Button -->
            <button 
                type="submit"
                class="w-full py-3 bg-blue-600 rounded-lg font-semibold hover:bg-blue-700 active:scale-95 transition"
            >
                Create User
            </button>

            <!-- Login Link -->
            <p class="text-center text-sm text-zinc-400">
                Already have an account?
                <a href="/login" class="text-blue-500 hover:underline">
                    Login
                </a>
            </p>

        </form>

    </div>

</body>
</html>
