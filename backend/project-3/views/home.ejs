<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 min-h-screen text-white">

    <!-- Navbar -->
    <nav class="bg-zinc-800 px-6 py-4 flex justify-between items-center">
        <h1 class="text-xl font-bold">MiniSocial</h1>
        <div class="flex items-center gap-4">
            <span class="text-zinc-300">Hi, <%= user.name %></span>
            <a href="/logout" class="text-red-400 hover:text-red-500">Logout</a>
        </div>
    </nav>

    <!-- Main -->
    <div class="max-w-2xl mx-auto p-6 space-y-6">

        <!-- Create Post -->
        <form method="POST" action="/post"
            class="bg-zinc-800 p-4 rounded-xl shadow space-y-3">

            <textarea name="content" rows="3"
                placeholder="What's on your mind?"
                class="w-full p-3 rounded-lg bg-zinc-700 text-white placeholder-zinc-400 outline-none focus:ring-2 focus:ring-blue-500"></textarea>

            <button
                class="bg-blue-600 hover:bg-blue-700 transition px-6 py-2 rounded-lg font-semibold">
                Post
            </button>
        </form>

        <!-- Posts -->
        <% posts.forEach(post => { %>
            <div class="bg-zinc-800 p-5 rounded-xl shadow space-y-2">

                <div class="flex justify-between items-center">
                    <h3 class="font-semibold text-blue-400">
                        <%= post.user.name %>
                    </h3>

                    <% if (post.user._id.toString() === user._id.toString()) { %>
                        <a href="/delete/<%= post._id %>"
                           class="text-sm text-red-400 hover:text-red-500">
                            Delete
                        </a>
                    <% } %>
                </div>

                <p class="text-zinc-200"><%= post.content %></p>

                <div class="flex items-center gap-4 text-sm text-zinc-400">
                    <a href="/like/<%= post._id %>" class="hover:text-pink-500">
                        ❤️ Like
                    </a>
                    <span><%= post.likes.length %> likes</span>
                </div>
            </div>
        <% }) %>

    </div>

</body>
</html>
