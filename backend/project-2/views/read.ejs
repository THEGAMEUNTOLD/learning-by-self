<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen">

    <!-- Home Button -->
    <a href="/" class="fixed top-6 left-6 z-50 p-2 rounded-full bg-zinc-800
              text-zinc-400 hover:text-white hover:bg-zinc-700 transition" title="Go Home">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
            stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round"
                d="M3 9.75L12 4l9 5.75V20a1 1 0 01-1 1h-5v-6H9v6H4a1 1 0 01-1-1V9.75z" />
        </svg>
    </a>

    <!-- Page Container -->
    <div class="p-10">

        <h1 class="text-2xl tracking-tighter text-center mb-6">
            All Users
        </h1>

        <!-- Users Grid -->
        <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

            <% if (users.length===0) { %>
                <p class="text-zinc-400">No users found.</p>
                <% } %>

                    <% users.forEach(user=> { %>
                        <div class="w-72 p-4 bg-zinc-800 rounded-lg flex flex-col">

                            <!-- Image -->
                            <% if (user.image) { %>
                                <img src="<%= user.image %>" alt="user image"
                                    class="w-full max-h-80 object-cover rounded-lg" />
                                <% } else { %>
                                    <div class="w-full h-48 bg-zinc-700 rounded-lg"></div>
                                    <% } %>

                                        <!-- Info -->
                                        <h3 class="text-xl mt-3 tracking-tighter">
                                            <%= user.name %>
                                        </h3>

                                        <h5 class="text-zinc-500">
                                            <%= user.email %>
                                        </h5>

                                        <!-- Actions -->
                                        <div class="flex gap-4 mt-8">
                                            <a href="/edit/<%= user._id %>" class="text-zinc-400 hover:text-white">
                                                Edit
                                            </a>

                                            <a href="/delete/<%= user._id %>" class="text-red-500 hover:text-red-400"
                                                onclick="return confirm('Delete this user?')">
                                                Delete
                                            </a>
                                        </div>

                        </div>
                        <% }) %>

        </div>
    </div>

</body>

</html>