<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Edit User</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen flex items-center justify-center">

    <!-- Back Button -->
    <a href="/read"
        class="fixed top-6 left-6 z-50 px-4 py-2 bg-zinc-800 rounded-lg
               text-zinc-400 hover:text-white hover:bg-zinc-700 transition">
        ‚Üê Back
    </a>

    <!-- Edit Form -->
    <form action="/update/<%= user._id %>" method="POST"
        class="bg-zinc-800 p-10 rounded-xl w-full max-w-md space-y-4 shadow-lg">

        <h1 class="text-2xl tracking-tighter text-center mb-4">
            Edit User
        </h1>

        <!-- Name -->
        <input type="text" name="name" value="<%= user.name %>" required
            class="w-full px-5 py-2 bg-transparent border-2 border-zinc-700 rounded-lg outline-none">

        <!-- Image -->
        <input type="url" name="image" value="<%= user.image %>"
            class="w-full px-5 py-2 bg-transparent border-2 border-zinc-700 rounded-lg outline-none text-zinc-400">

        <!-- Email -->
        <input type="email" name="email" value="<%= user.email %>" required
            class="w-full px-5 py-2 bg-transparent border-2 border-zinc-700 rounded-lg outline-none">

        <!-- Buttons -->
        <div class="flex gap-4 pt-4">
            <button type="submit"
                class="flex-1 py-2 bg-blue-700 hover:bg-blue-600 rounded-lg transition">
                Update
            </button>

            <a href="/read"
                class="flex-1 py-2 text-center bg-zinc-700 hover:bg-zinc-600 rounded-lg transition">
                Cancel
            </a>
        </div>

    </form>

</body>

</html>
